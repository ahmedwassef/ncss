<div class="mb-3"><h6 class="section-subtitle"> {{ "Upcoming Events"|t }}</h6></div>
<div class="home-upcoming-events-wrapper d-flex flex-column gap-3">

  {% if rows -%}
    {{ rows }}
  {% else %}
    {# Beautiful Empty State #}
    <div class="empty-state empty-state--events">
      <div class="empty-state__container">

        {# Animated Icon/Illustration #}
        <div class="empty-state__icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" class="empty-state__illustration">
            <defs>
              <linearGradient id="emptyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#1b8354;stop-opacity:0.8" />
                <stop offset="100%" style="stop-color:#146c43;stop-opacity:0.9" />
              </linearGradient>
            </defs>
            {# Calendar Icon #}
            <rect x="40" y="50" width="120" height="100" rx="10" fill="url(#emptyGradient)" opacity="0.2" class="empty-state__shape empty-state__shape--1"/>
            <rect x="50" y="60" width="100" height="80" rx="8" fill="url(#emptyGradient)" opacity="0.3" class="empty-state__shape empty-state__shape--2"/>
            <rect x="60" y="70" width="80" height="60" rx="6" fill="url(#emptyGradient)" class="empty-state__shape empty-state__shape--3"/>
            <rect x="70" y="50" width="8" height="30" rx="4" fill="#1b8354" class="empty-state__shape empty-state__shape--4"/>
            <rect x="122" y="50" width="8" height="30" rx="4" fill="#1b8354" class="empty-state__shape empty-state__shape--5"/>
            <line x1="70" y1="95" x2="90" y2="95" stroke="white" stroke-width="3" stroke-linecap="round" class="empty-state__shape empty-state__shape--6"/>
            <line x1="110" y1="95" x2="130" y2="95" stroke="white" stroke-width="3" stroke-linecap="round" class="empty-state__shape empty-state__shape--7"/>
            <line x1="70" y1="110" x2="110" y2="110" stroke="white" stroke-width="3" stroke-linecap="round" class="empty-state__shape empty-state__shape--8"/>
          </svg>
        </div>

        {# Content #}
        <div class="empty-state__content">
          <h3 class="empty-state__title">
            {{ "No Upcoming Events"|t }}
          </h3>
          <p class="empty-state__description">
            {{ "There are no events scheduled at the moment. Check back soon for exciting upcoming events and activities."|t }}
          </p>
        </div>

        {# Call to Action #}
        <div class="empty-state__actions">
          <a href="/events" class="btn btn-primary empty-state__btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
              <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
            </svg>
            {{ "View All Events"|t }}
          </a>
        </div>

        {# Decorative Elements #}
        <div class="empty-state__decoration empty-state__decoration--1"></div>
        <div class="empty-state__decoration empty-state__decoration--2"></div>
        <div class="empty-state__decoration empty-state__decoration--3"></div>
      </div>
    </div>
  {% endif %}


</div>





