<!-- breadcrumb-area -->


<div class="container">
  <h1 class="page-heading">{{ 'From the Heart of the Event: News and Activities of the Center'|t }}</h1>
  <p class="page-description pb-5">
    {{ 'Stay constantly updated with the latest news, events, and official announcements from the National Center
  for Social Studies and Research. We bring you everything happening behind the scenes â€” from new studies and fruitful partnerships to national initiatives that create impact and reflect the pulse of Saudi society.
  Follow the latest developments and be part of the ever-evolving intellectual and social movement.'|t }}
  </p>

</div>
<div class="container my-5">
  <div class="d-flex flex-column gap-3 mb-3 flex-md-row justify-content-between align-items-center">
    <nav>
      <div class="nav nav-pills" id="nav-tab" role="tablist">

        <a disabled class="nav-link active" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button"
           role="tab" aria-controls="nav-contact" aria-selected="false">{{"News"|t}}
        </a>

        <a class="nav-link"   href="{{ path('view.events.page') }}" >
          {{"Events"|t}}
        </a>

        <a  class="nav-link " href="{{ path('view.gallery.page') }}" aria-selected="false">
          {{"Gallery"|t}}
        </a>

      </div>
    </nav>
    <div class="blog-search-bar">
        {{ exposed }}
    </div>
  </div>

  {# Exposed form: search input + Apply button, RTL & LTR #}
  <style>
    .blog-search-bar .form-row,
    .blog-search-bar form.blog-exposed-form-inline,
    .blog-search-bar form.views-exposed-form {
      display: flex !important;
      flex-direction: row !important;
      flex-wrap: nowrap !important;
      align-items: stretch !important;
      gap: 0 !important;
      max-width: 420px;
    }
    .blog-search-bar .form-row form {
      display: flex !important;
      flex-direction: row !important;
      flex-wrap: nowrap !important;
      align-items: stretch !important;
      flex: 1 !important;
      min-width: 0 !important;
    }
    .blog-search-bar .blog-search-input-wrapper {
      flex: 1 1 auto !important;
      min-width: 0 !important;
      display: flex !important;
      align-items: stretch !important;
    }
    .blog-search-bar .blog-search-input-wrapper .form-item,
    .blog-search-bar .form-item {
      flex: 1 !important;
      margin: 0 !important;
      min-width: 0 !important;
      display: flex !important;
      align-items: stretch !important;
    }
    .blog-search-bar .blog-search-input-wrapper label,
    .blog-search-bar .form-item label {
      display: none !important;
    }
    /* LTR: input left (rounded left), button right (rounded right) */
    .blog-search-bar .blog-search-input-wrapper input,
    .blog-search-bar .form-item input.form-text,
    .blog-search-bar .form-item input.form-search,
    .blog-search-bar .form-item input[type="text"] {
      flex: 1 !important;
      min-width: 0 !important;
      box-sizing: border-box !important;
      height: 48px !important;
      min-height: 48px !important;
      line-height: 1.25 !important;
      border: 2px solid #e9ecef !important;
      border-right: none !important;
      border-radius: 0.5rem 0 0 0.5rem !important;
      padding: 0 1rem !important;
      font-size: 1rem !important;
      vertical-align: middle !important;
      text-align: start !important;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }
    .blog-search-bar .form-item input:focus,
    .blog-search-bar .blog-search-input-wrapper input:focus {
      outline: none !important;
      border-color: #1b8354 !important;
      box-shadow: 0 0 0 3px rgba(27, 131, 84, 0.15) !important;
    }
    .blog-search-bar .form-actions {
      margin: 0 !important;
      flex: 0 0 auto !important;
      display: flex !important;
      align-items: stretch !important;
    }
    .blog-search-bar .form-actions input[type="submit"],
    .blog-search-bar .form-actions button[type="submit"] {
      margin-top: 4px;
      box-sizing: border-box !important;
      height: 48px !important;
      min-height: 48px !important;
      line-height: 1.25 !important;
      padding: 0 1.25rem !important;
      font-size: 1rem !important;
      border-radius: 0 0.5rem 0.5rem 0 !important;
      background: linear-gradient(135deg, #1b8354 0%, #146c43 100%) !important;
      border: 2px solid #1b8354 !important;
      color: #fff !important;
      font-weight: 600 !important;
      cursor: pointer !important;
      display: inline-flex !important;
      align-items: center !important;
      justify-content: center !important;
      vertical-align: middle !important;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .blog-search-bar .form-actions input[type="submit"]:hover,
    .blog-search-bar .form-actions button[type="submit"]:hover {
      box-shadow: 0 4px 12px rgba(27, 131, 84, 0.35) !important;
      transform: translateY(-1px);
    }
    /* RTL: input right (rounded right), button left (rounded left) */
    html[dir="rtl"] .blog-search-bar .form-item input,
    html[dir="rtl"] .blog-search-bar .blog-search-input-wrapper input {
      border-right: 2px solid #e9ecef !important;
      border-left: none !important;
      border-radius: 0 0.5rem 0.5rem 0 !important;
    }
    html[dir="rtl"] .blog-search-bar .form-item input:focus,
    html[dir="rtl"] .blog-search-bar .blog-search-input-wrapper input:focus {
      border-right-color: #1b8354 !important;
      border-left: none !important;
    }
    html[dir="rtl"] .blog-search-bar .form-actions input[type="submit"],
    html[dir="rtl"] .blog-search-bar .form-actions button[type="submit"] {
      border-radius: 0.5rem 0 0 0.5rem !important;
    }
    /* RTL mobile: restore full borders when stacked */
    @media (max-width: 576px) {
      .blog-search-bar .form-row,
      .blog-search-bar form.blog-exposed-form-inline {
        flex-wrap: wrap !important;
        max-width: 100%;
      }
      .blog-search-bar .form-item input,
      .blog-search-bar .blog-search-input-wrapper input {
        border-right: 2px solid #e9ecef !important;
        border-radius: 0.5rem !important;
        height: 48px !important;
      }
      html[dir="rtl"] .blog-search-bar .form-item input,
      html[dir="rtl"] .blog-search-bar .blog-search-input-wrapper input {
        border-left: 2px solid #e9ecef !important;
      }
      .blog-search-bar .form-actions input[type="submit"],
      .blog-search-bar .form-actions button[type="submit"] {
        border-radius: 0.5rem !important;
        width: 100% !important;
        height: 48px !important;
      }
    }
  </style>
  <div class="row">
    {% if rows -%}
      {{ rows }}
    {% endif %}

  </div>
  {{ pager }}
 </div>






